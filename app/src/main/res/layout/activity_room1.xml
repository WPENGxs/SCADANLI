<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.Room_1"
    android:background="@drawable/home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家"
                android:textSize="20sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="可视化界面"
                    android:textSize="15sp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            android:orientation="vertical">

                            <com.example.scadanli.CirCleProgressBar
                                android:id="@+id/cir_progressbar_01"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                app:circle_bg_color="#B9F3FC"
                                app:circle_bg_width="10dp"
                                app:circle_color="#42E5FF"
                                app:circle_width="10dp"
                                app:max_progress="100"
                                app:start_angle="160"
                                app:text_color="#CCCCCC"
                                app:text_size="20sp"
                                app:total_angle="221" />

                            <TextView
                                android:id="@+id/textView_cir_01"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="进度01"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.example.scadanli.CirCleProgressBar
                                android:id="@+id/cir_progressbar_02"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                app:circle_bg_color="#B9F3FC"
                                app:circle_bg_width="10dp"
                                app:circle_color="#42E5FF"
                                app:circle_width="10dp"
                                app:max_progress="100"
                                app:start_angle="160"
                                app:text_color="#CCCCCC"
                                app:text_size="20sp"
                                app:total_angle="221" />

                            <TextView
                                android:id="@+id/textView2cir_02"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="进度02"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round"
                            android:orientation="vertical">

                            <com.example.scadanli.CirCleProgressBar
                                android:id="@+id/cir_progressbar_03"
                                android:layout_width="150dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                app:circle_bg_color="#B9F3FC"
                                app:circle_bg_width="10dp"
                                app:circle_color="#42E5FF"
                                app:circle_width="10dp"
                                app:max_progress="100"
                                app:start_angle="160"
                                app:text_color="#CCCCCC"
                                app:text_size="20sp"
                                app:total_angle="221" />

                            <TextView
                                android:id="@+id/textView_cir_03"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="进度03"
                                android:textAlignment="center"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
